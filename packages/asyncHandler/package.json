{
  "name": "@unleashit/async-handler",
  "version": "1.1.0",
  "description": "Simple HOC that handles loading, error and no result states of data fetching.",
  "main": "src/index.tsx",
  "exports": {
    ".": {
      "import": "./src/index.tsx",
      "require": "./src/index.tsx"
    },
    "./dist/*.css": {
      "import": "./src/scss/*.scss",
      "require": "./src/scss/*.scss"
    }
  },
  "publishConfig": {
    "main": "dist/index.js",
    "module": "dist/index.mjs",
    "exports": {
      ".": {
        "import": "./dist/index.mjs",
        "require": "./dist/index.js"
      },
      "./dist/*.css": {
        "import": "./dist/*.css",
        "require": "./dist/*.css"
      }
    },
    "access": "public"
  },
  "sideEffects": [
    "*.css",
    "*.scss"
  ],
  "scripts": {
    "build": "NODE_ENV=production tsup && pnpm sass:build",
    "dev": "concurrently 'NODE_ENV=development tsup --watch' 'pnpm sass'",
    "sass": "pnpm sass:build && pnpm sass:watch",
    "sass:build": "node-sass -r src/scss -o dist --source-map true",
    "sass:watch": "node-sass -wr src/scss -o dist --source-map true",
    "test": "NODE_ENV=test jest"
  },
  "license": "MIT",
  "keywords": [
    "data state handler",
    "HOC",
    "react",
    "react components",
    "ui components",
    "ui library",
    "monorepo",
    "lerna",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/unleashit/npm-library.git"
  },
  "homepage": "https://github.com/unleashit/npm-library/tree/master/packages/asyncHandler",
  "bugs": {
    "url": "https://github.com/unleashit/npm-library/issues"
  },
  "peerDependencies": {
    "react": "16.x || 17.x || 18.x"
  },
  "dependencies": {
    "@unleashit/common": "workspace:*"
  },
  "devDependencies": {
    "@unleashit/configs": "workspace:*"
  }
}
