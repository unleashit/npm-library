{
  "name": "@unleashit/async-handler",
  "version": "2.0.3",
  "description": "Simple HOC that handles loading, error and no result states of data fetching.",
  "main": "src/index.ts",
  "types": "src/index.d.ts",
  "exports": {
    ".": "./src/index.ts",
    "./dist/*.css": "./dist/*.css",
    "./dist/*.module.css": "./src/scss/*.module.scss"
  },
  "publishConfig": {
    "main": "dist/index.js",
    "module": "dist/index.mjs",
    "types": "dist/index.d.ts",
    "exports": {
      ".": {
        "import": "./dist/index.mjs",
        "require": "./dist/index.js"
      },
      "./dist/*.css": "./dist/*.css"
    },
    "access": "public"
  },
  "files": [
    "dist",
    "*.png"
  ],
  "sideEffects": [
    "*.css",
    "*.scss"
  ],
  "scripts": {
    "build": "NODE_ENV=production tsup --tsconfig tsconfig.lib.json && pnpm sass:build",
    "dev": "concurrently 'NODE_ENV=development tsup --watch' 'pnpm sass'",
    "sass": "pnpm sass:build && pnpm sass:watch",
    "sass:build": "node-sass -r src/scss -o dist --source-map true --include-path '../../shared/common/src/scss' && pnpm sass:postbuild",
    "sass:postbuild": "../../shared/scripts/postcssRename.js --name asyncHandler ./dist/async-handler.module.css",
    "sass:watch": "node-sass -wr src/scss -o dist --source-map true --include-path '../../shared/common/src/scss'",
    "test": "NODE_ENV=test jest"
  },
  "license": "MIT",
  "keywords": [
    "async state handler",
    "isomorphic suspense",
    "react",
    "higher order component",
    "ui components",
    "ui library",
    "npm",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/unleashit/npm-library.git"
  },
  "homepage": "https://github.com/unleashit/npm-library/tree/master/packages/asyncHandler",
  "bugs": {
    "url": "https://github.com/unleashit/npm-library/issues"
  },
  "peerDependencies": {
    "react": "16.x || 17.x || 18.x"
  },
  "dependencies": {
    "@unleashit/common": "workspace:*"
  },
  "devDependencies": {
    "@unleashit/configs": "workspace:*"
  },
  "module": "dist/index.mjs"
}
