{
  "packages": ["packages/*"],
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "nohoist": [
    "react-native",
    "react-native/**",
    "express",
    "jsonwebtoken",
    "pino",
    "pino-debug",
    "pino-pretty",
    "express-pino-logger",
    "@sentry/node",
    "@types/express",
    "@types/node"
  ],
  "command": {
    "publish": {
      "conventionalCommits": true,
      "createRelease": "github",
      "message": "chore(release): publish"
    },
    "version": {
      "conventionalCommits": true,
      "createRelease": "github"
    }
  }
}
