{
  "name": "npm-library",
  "description": "NX and pnpm Workspaces monorepo of NPM packages, React and UI components",
  "private": true,
  "author": "unleashit",
  "license": "MIT",
  "keywords": [
    "monorepo",
    "nx",
    "react",
    "node",
    "npm packages",
    "react components",
    "ui components",
    "ui library"
  ],
  "bugs": {
    "url": "https://github.com/unleashit/npm-library/issues"
  },
  "scripts": {
    "build": "nx run-many -t build --exclude=@unleashit/demo",
    "build:pnpm": "pnpm --filter @unleashit/common build && pnpm --filter=!@unleashit/demo -r --parallel build",
    "dev": "nx run-many --target=dev --all --parallel=12",
    "dev:pnpm": "pnpm -r --parallel dev",
    "demo": "nx dev @unleashit/demo",
    "test": "nx run-many --target=test --all",
    "lint": "eslint '{demos,packages,shared}/**/src/**/*.{ts,tsx,js,jsx,json}'",
    "lint:fix": "eslint --fix '{demos,packages,shared}/**/src/**/*.{ts,tsx,js,jsx,json}'",
    "format": "prettier '{demos,packages,shared}/**/src/**/*.{ts,tsx,js,jsx,json}'",
    "format:write": "prettier --write '{demos,packages,shared}/**/src/**/*.{ts,tsx,js,jsx,json}'",
    "prepublishOnly": "pnpm run build",
    "release": "HUSKY_BYPASS=true lerna publish",
    "clean": "pnpm clean:build && pnpm clean:nm",
    "clean:build": "pnpm -r exec rm -rf dist build",
    "clean:nm": "rm -rf node_modules && pnpm -r exec rm -rf node_modules",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@cfaester/enzyme-adapter-react-18": "^0.7.0",
    "@commitlint/cli": "^17.6.3",
    "@commitlint/config-conventional": "^17.6.3",
    "@types/enzyme": "^3.10.13",
    "@types/jest": "^29.5.1",
    "@types/lodash": "^4.14.194",
    "@types/node": "^20.2.3",
    "@types/react": "18.2.6",
    "@types/react-dom": "^18.2.4",
    "@types/yup": "^0.29.14",
    "@typescript-eslint/eslint-plugin": "^5.59.7",
    "@typescript-eslint/parser": "^5.59.7",
    "@unleashit/configs": "*",
    "concurrently": "^8.0.1",
    "enzyme": "^3.11.0",
    "enzyme-to-json": "^3.6.2",
    "eslint": "8.41.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "formik": "^2.2.9",
    "husky": "^8.0.3",
    "jest": "29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "lerna": "^6.6.2",
    "node-sass": "^9.0.0",
    "nx": "16.2.2",
    "prettier": "^2.8.8",
    "react-dom": "^18.2.0",
    "sass-loader": "^13.3.0",
    "ts-jest": "29.1.0",
    "ts-loader": "^9.4.3",
    "tsup": "^6.7.0",
    "typescript": "5.0.4",
    "yup": "^1.1.1"
  },
  "resolutions": {
    "@types/react": "18.2.0"
  },
  "workspaces": {
    "packages": [
      "shared/*",
      "packages/*",
      "demos/*"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "prettier": {
    "semi": true,
    "trailingComma": "all",
    "singleQuote": true,
    "printWidth": 90,
    "tabWidth": 2
  }
}
