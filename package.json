{
  "name": "npm-library",
  "description": "Lerna/Yarn Workspaces monorepo of my NPM packages, React and UI components",
  "private": true,
  "author": "unleashit",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/unleashit/npm-library/issues"
  },
  "scripts": {
    "start": "lerna run --parallel start",
    "start:build": "yarn run build && lerna run --parallel start",
    "build": "lerna run --stream build",
    "build:pagination": "lerna run build --scope=@unleashit/pagination",
    "test": "lerna run --stream --concurrency 1 test",
    "test:watch": "lerna run --stream test:watch",
    "test:coverage": "lerna run --stream test:coverage",
    "publish": "HUSKY_BYPASS=true lerna publish",
    "storybook": "start-storybook -p 9009",
    "build-storybook": "build-storybook",
    "clean": "lerna clean && rm -rf node_modules"
  },
  "dependencies": {
    "weak": "^1.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.3.3",
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "@svgr/webpack": "^4.1.0",
    "@types/enzyme": "^3.9.0",
    "@typescript-eslint/eslint-plugin": "^1.3.0",
    "@typescript-eslint/parser": "^1.3.0",
    "babel-loader": "8.0.5",
    "css-loader": "^2.1.0",
    "enzyme-adapter-react-16": "^1.9.1",
    "eslint": "5.12.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^4.0.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "husky": "^1.3.1",
    "lerna": "^3.13.1",
    "node-sass": "^4.11.0",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "typescript": "3.2.1"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "type-enum": [
        2,
        "always",
        [
          "build",
          "configs",
          "docs",
          "feature",
          "fix",
          "perf",
          "refactor",
          "revert",
          "style",
          "test",
          "misc"
        ]
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "jest": {
    "globalSetup": "./testSetup.js",
    "testURL": "http://localhost/",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  }
}
