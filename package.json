{
  "name": "npm-library",
  "description": "Lerna/Yarn Workspaces monorepo of NPM packages, React and UI components",
  "private": true,
  "author": "unleashit",
  "license": "MIT",
  "keywords": [
    "monorepo",
    "nx",
    "react",
    "node",
    "npm packages",
    "react components",
    "ui components",
    "ui library"
  ],
  "bugs": {
    "url": "https://github.com/unleashit/npm-library/issues"
  },
  "scripts": {
    "build": "nx run-many -t build --exclude=@unleashit/demos",
    "build:pnpm": "pnpm --filter @unleashit/common build && pnpm --filter=!@unleashit/demos -r --parallel build",
    "dev": "nx run-many --target=dev --all --parallel=12",
    "demo": "nx dev @unleashit/demos",
    "test": "nx run-many --target=test --all",
    "lint": "eslint 'packages/**/src/**/*.{ts,tsx,js,jsx,json}'",
    "lint:fix": "eslint --fix 'packages/**/src/**/*.{ts,tsx,js,jsx,json}'",
    "format": "prettier 'packages/**/src/**/*.{ts,tsx,js,jsx,json}'",
    "format:write": "prettier --write 'packages/**/src/**/*.{ts,tsx,js,jsx,json}'",
    "prepublishOnly": "npm run build",
    "release": "HUSKY_BYPASS=true lerna publish",
    "clean": "npm run clean:build && lerna clean && rm -rf node_modules",
    "clean:build": "lerna exec -- rm -rf dist build",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@cfaester/enzyme-adapter-react-18": "^0.7.0",
    "@commitlint/cli": "^17.6.1",
    "@commitlint/config-conventional": "^17.6.1",
    "@types/enzyme": "^3.10.13",
    "@types/jest": "^29.5.1",
    "@types/lodash": "^4.14.194",
    "@types/node": "^18.16.3",
    "@types/react": "18.2.0",
    "@types/react-dom": "^18.2.1",
    "@types/yup": "^0.29.14",
    "@typescript-eslint/eslint-plugin": "^5.59.2",
    "@typescript-eslint/parser": "^5.59.2",
    "@unleashit/configs": "*",
    "concurrently": "^8.0.1",
    "enzyme": "^3.11.0",
    "enzyme-to-json": "^3.6.2",
    "eslint": "8.39.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "formik": "^2.2.9",
    "husky": "^8.0.3",
    "jest": "29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "lerna": "^6.6.1",
    "node-sass": "^8.0.0",
    "nx": "16.1.0",
    "prettier": "^2.8.8",
    "react-dom": "^18.2.0",
    "sass-loader": "^13.2.2",
    "ts-jest": "29.1.0",
    "ts-loader": "^9.4.2",
    "tsup": "^6.7.0",
    "typescript": "5.0.4",
    "yup": "^1.1.1"
  },
  "resolutions": {
    "@types/react": "18.2.0"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "prettier": {
    "semi": true,
    "trailingComma": "all",
    "singleQuote": true,
    "printWidth": 90,
    "tabWidth": 2
  }
}

